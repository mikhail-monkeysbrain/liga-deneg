@import "../fonts/bloggersans/bloggersans.css" //font-family: "Blogger Sans"
@import "../fonts/roboto/roboto.css" //font-family: "Blogger Sans"
@import "variables.styl"
@import "helpers.styl"

body
	font-family: "Blogger Sans"
	font-size small
	position relative
	color: white
h1
	font-family: "Blogger Sans"
	font-size xx-large
h2
	font-family: "Blogger Sans"
	font-size x-large
	text-align center
h3
	font-family: "Blogger Sans"
	font-size large
	text-align center
	font-style italic
#sect-1
	width 100%
	min-height 572px
	background url('../img/bg-1.jpg') no-repeat center
	background-size cover
	padding 15px 0
#sect-2
	width 100%
	color black
#sect-3
	width 100%
	min-height 575px
	position relative
	background  magenta
	padding 35px 0
	&::before
		content ''
		width 100%
		height 13px
		display block
		position absolute
		top -13px
		background url('../img/pattern.png') repeat-x
	&::after
		content ''
		display block
		border 20px solid transparent
		border-top 20px solid magenta
		width 0
		position absolute
		bottom -40px
		left calc(50% - 10px)
#sect-4
	width 100%
	min-height 376px
	position relative
	background lightgray
	padding 35px 0
	color black
	font-style italic
	text-align center
#sect-5
	position relative
	&::after
		content ''
		width 100%
		height 20px
		display block
		background gray
		position absolute
		bottom -20px
#sect-6
	padding 35px 0
	color black
	a
		color lightblue
.inner
	width 95%
	max-width 1200px
	margin 0 auto
	&.minim
		max-width 960px
.header
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content space-between
.logo
	width 15%
.address
	width 35%
	position relative
	line-height 1.3
	&::before
		content ''
		position absolute
		left -2em
		display block
		size (25px 30px)
		background url('../img/icons.png')
	&:nth-last-child(1)
		&::after
			content ''
			position absolute
			left -4em
			top 0
			display block
			width 1px
			height 100%
			background white
.menu
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content space-between
	margin 25px 0
	&-item
		width 20%
		text-align center
		padding 20px
		background rgba(84, 149, 207, .5)
		transition animation
		position relative
		cursor pointer
		a
			width 100%
			height 100%
			color white
			text-decoration none
			font-style italic
		&.current
			background rgba(0, 84, 118, .75) !important
			color lightblue
			a
				color lightblue
			&::before
				content '\26AA   '
				font-weight 600
				margin-left -1em
				font-style normal !important	
		&:hover
			background rgba(0, 84, 118, .5)
.content
	width 1200px
	margin 0 auto
	position relative
.slider
	width 50%
	position relative
	margin-top 100px
.girl
	position absolute
	right 0
	bottom -133px
.loan
	width 100%
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items botom
	justify-content space-between
	margin 35px 0
	&-type
		width 365px
		border-radius 10px
		text-transform uppercase
		text-align center
		padding 25px
		background magenta * 1.2
		font-size normal
		margin-top 35px
		&.active
			margin-top 0
			border 3px dashed
		p
			margin 20px auto
			padding 15px 0
.hr
	width 100%
	height 2px
	background white
	margin 10px 0
.blue
	background blue
	font-size normal * 0.9
.orange
	@extend .blue
	background orange
	width 60%
.how
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content space-between
	margin 50px 0 30px
	font-size normal
.step
	size (200px 167px)
	position relative
	p
		margin-top 25px
.arrow
	size (82px 56px)
	background url(../img/arrow.png)
.special
	width 100%
	background darkgray
	padding 20px 0
	text-align center
	a
		color white
		font-size normal
		text-decoration none
footer
	background lightgray
	padding 10px
	div
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content space-between
.phone
	font-size large
	font-weight 600
	position relative
	&::before
		@extend .address::before
		left -1.3em
		background-position: -24px 0
		width 34px
#owl-cert, #owl-slide
	position relative
	width 90%
	margin 2em auto 1em
	a
		color gray
		cursor pointer
		transition animation
		font-weight 600
		font-size 50px
		background-color transparent
		&.top
			color white
		&:hover
			color blue
.item
	margin 0 0px
	text-align center
.btn
	size (50px 50px)
	position absolute
	top calc(50% - 25px)
.prev
	left -5%
	&.top
		left 0
		z-index 999
.next
	right -5%
	&.top
		right 0
		z-index 999
#owl-slide
	.item
		width 80%
		margin 0 auto
		p
			color black
			font-size normal
			&.lightblue
				font-size x-large
				background lightblue
				color red
				width 80%
				margin 0 auto
				padding 10px
				text-align center
				font-weight 600